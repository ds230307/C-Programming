#include <stdio.h>
int main() {
    int N;
    scanf("%d", &N);
    int arr[100];
    int visited[100] = {0}; 
    for(int i = 0; i < N; i++) {
        scanf("%d", &arr[i]);
    }
    for(int i = 0; i < N; i++) {
        if(visited[i] == 1)
            continue; 
        int count = 1;
        for(int j = i + 1; j < N; j++) {
            if(arr[i] == arr[j]) {
                count++;
                visited[j] = 1; 
            }
        }
        printf("%d: %d\n", arr[i], count);
    }
    return 0;
}
